<div class="container">
	<h1>Complaint History</h1>
	<table style="width:100%">
		<%@complaints.each_with_index do |c,i|%>

		<tr>
			<td>Location: </td>
			<td><%=c.latitude%><%=c.longitude%></td>
			<td><%=link_to 'View', %></td>
		</tr>
		<tr>
			<td>Number Plate: </td>
			<td><%=c.number_plate%></td>
		</tr>
		<tr>
			<td>Offence:</td>
			<td><%=c.offence%></td>
		</tr>		
		<tr>
			<td>Comment:</td>
			<td><%=c.comment%></td>
		</tr>

		<tr>
			<td>Image Proof:</td>
		</tr>
		<tr>
			<td></td>
			<td><%=image_tag c.avatar.url%></td>
		</tr>
		<hr/>
		<%end%>
	</table>
	
</div>