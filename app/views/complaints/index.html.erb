<div class="container">
	<h1>Complaint History</h1>
	<hr/>

		<div class= "card-deck d-flex justify-content-between">
			<% @complaints.each_with_index do |c, i| %>
				<!-- div class = "d-inline-block"--> 
				<div class="row">
					<div class="card border-dark mb-4 mr-2" style="width: 30rem; text-align:left">
							<div class="card-body">
								<h5 class="card-title">Car No: <%= c.number_plate %></h5>
								<h5 class="card-title">Location: <%= c.address %></h5>
								<h5 class="card-title">Offence: <%= c.offence %></h5>
								<h5 class="card-title">Fine: RM <%= c.fine_amount %></h5>
							</div>
					</div>
				</div>
			<% end %>
		</div>
	<hr/>
</div>