<div class="container">
	<h1>Complaint <%=@complaint.id%></h1>
</div>

<div class="container">
	<table style="width:100%">
		<tr>
			<td>Complaint filed by:</td>
			<td><%=@complaint.user.full_name%> | ID: <%=@complaint.user.id%></td>
		</tr>
		<tr>
			<td>Offender:</td>
			<%offender=@users.find_by(id:@complaint.offender_id)%>
			<td><%=offender.full_name%> | ID: <%=@complaint.offender_id%> </td>
		</tr>
		<tr>
			<td>Coordinates: </td>
			<td><%=@complaint.latitude%>,<%=@complaint.longitude%></td>
		</tr>
		<tr>
			<td>Address:</td>
			<td><%=@complaint.address%></td>
		</tr>
		<tr>
			<td>Number Plate: </td>
			<td><%=@complaint.number_plate%></td>
		</tr>
		<tr>
			<td>Offence:</td>
			<td><%=@complaint.offence%></td>
		</tr>
		<tr>
			<td>Fine:</td>
			<td>RM <%=@complaint.fine%></td>
		</tr>		
		<tr>
			<td>Comment:</td>
			<td><%=@complaint.comment%></td>
		</tr>

		<tr>
			<td>Image Proof:</td>
		</tr>
		<tr>
			<td></td>
			<td><%=image_tag @complaint.avatar.url , width: "500"%></td>
		</tr>
		</table>
</div>

<br/>

<div class="container" style= "text-align:center">
	<%= form_for [@complaint, Fine.new] do |f| %>
		<button class="btn btn-primary"> Approve </button>
	<% end %>
	<%= form_for [@complaint, Fine.new] do |f| %>
		<button class="btn btn-danger"> Reject </button>
	<% end %>
</div>