<thead>
    <tr class="table-info">
    <th scope="col">#</th>
    <th scope="col">No. Plate</th>
    <th scope="col">Location</th>
    <th scope="col">Offence</th>
    <th scope="col">Amount</th>
    <th scope="col">Status</th>
    </tr>
</thead>
<tbody>
    <% @fines.each do |list| %>
        <tr>
        <th scope="row"><%= list.id %></th>
        <td><%= list.complaint.number_plate %></td>
        <td><%= list.location %></td>
        <td><%= list.offence %></td>
        <td><%= list.amount %></td>
        <td><%= list.status %></td>
        </tr>
    <% end %>
</tbody>