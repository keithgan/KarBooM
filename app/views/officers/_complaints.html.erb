<thead>
    <tr class="bg-dark">
    <th class="text-warning" scope="col">#</th>
    <th class="text-warning" scope="col">Car No. Plate</th>
    <th class="text-warning" scope="col">Offence</th>
    <th class="text-warning" scope="col">Submitted By</th>
    <th class="text-warning" scope="col">Status</th>
    </tr>
</thead>
<tbody>
    <% if @complaints != nil %>
        <% @complaints.each do |list| %>
            <tr>
            <th scope="row"><%= list.id %></th>
            <td><%= list.number_plate %></td>
            <td><%= list.offence %></td>
            <td><%= list.user_id %></td>
            <td> <%= link_to t("#{list.status}"), show_complaint_path(list) %></td>
            </tr>
        <% end %>
    <% end %>
</tbody>

        
