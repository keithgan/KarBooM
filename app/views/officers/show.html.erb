<div class="container-fluid">
    <div class="row">
        <div class="col-3">
            <div id="side_profile">
                <div id="avatar_profile"></div>
                <p class="officer_profile_info">Name: @officer.full_name</p>
                <p class="officer_profile_info">Locality: @officer.officer_locality</p>
            </div>
        </div>
        <div class="col-9">
            <div id="officer_option_tabs">
                <div class="justify-content-center" id="view_all">
                    <div class="container text-center">
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">View All</button>
                    </div>
                    </br>
                    <div id="option_tabs">
                        <div class="row">
                            <div class="col-4" id="complaints-tab">
                                <%= form_with url: complaints_tab_path, method: :get do |form| %>
                                    <%= form.submit "Complaints" %>
                                <% end %>
                            </div>
                            <div class="col-4" id="appeals-tab">
                                <%= form_with url: appeals_tab_path, method: :get do |form| %>
                                    <%= form.submit "Appeals" %>
                                <% end %>
                            </div>
                            <div class="col-4" id="fines-tab">
                                <%= form_with url: appeals_tab_path, method: :get do |form| %>
                                    <%= form.submit "Fines" %>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</br>
<div class="container-fluid">
    <table class="table table-hover" id="officer-work-table">
        <%= render 'officers/complaints' %>
                <td> <%= link_to t(".view"), show_complaint_path(@officer.id, list) %> </td>
    </table>
</div>

    <div class="row" id="officer_task_list">
        <div class="col-1 task_column">
            <h3>Index</h3>
            @complaint.id
        </div>
        <div class="col-2 task_column">
            <h3>Car No. Plate</h3>
             @complaint.number_plate
        </div>
        <div class="col-4 task_column">
            <h3>Offence</h3>
             @complaint.offence
        </div>
        <div class="col-3 task_column">
            <h3>Reporting User</h3>
            @complaint.user_id
        </div>
        <div class="col-2 task_column">
            <h3>Complaint Status</h3>
            @complaint.status
        </div>
    </div>

<html>
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- Normalize CSS -->
	    <link rel="stylesheet" href="normalize.css"/>
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <!--Additional CSS-->
        <style>
            .modal.and.carousel.and.card {
                position: fixed; /*Needed because the carousel overrides the position property.*/
            }
        </style>
    </head>
    <body>
        <div class="container text-center">
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
            View All
            </button>
      
            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <% @complaints.each do |list| %>
                                    <% if list == @complaints[0] %>
                                        <div class="carousel-item active">
                                            <div class="card">
                                                <div class="card-header">
                                                    Report ID# <%= list.id %>
                                                </div>
                                                <img class="card-img-top img-fluid" src="<%= list.avatar %>"/>
                                                <div class="card-body">
                                                    <h5 class="card-title"><%= list.number_plate %></h5>
                                                    <p class="card-text"><%= list.offence %></p>
                                                    <a href="#" class="btn btn-primary carousel-approve">Approve</a>
                                                    <a href="#" class="btn btn-primary carousel-reject"> Reject </a>
                                                </div>
                                            </div>
                                        </div>
                                    <% else %>
                                        <div class="carousel-item">
                                            <div class="card">
                                                <div class="card-header">
                                                    Report ID# <%= list.id %>
                                                </div>
                                                <img class="card-img-top img-fluid" src="<%= list.avatar %>"/>
                                                <div class="card-body">
                                                    <table class="table table-borderless table-hover">
                                                        <tbody>
                                                            <tr>
                                                                <td><%= list.number_plate %></th>
                                                            </tr>
                                                            <tr>                                                           <tr>
                                                                <td><%= list.offence %></th>
                                                            </tr>
                                                            <tr>                                                           <tr>
                                                                <td><%= list.comment %></th>
                                                            </tr>
                                                            <tr>                                                           <tr>
                                                                <td><%= list.user_id %></th>
                                                            </tr>
                                                            <tr>                                                           <tr>
                                                                <td><%= list.status %></th>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                        <a href="#" class="btn btn-primary carousel-approve">Approve</a>
                                                        <a href="#" class="btn btn-primary carousel-reject"> Reject </a>
                                                </div>
                                            </div>
                                        </div>
                                    <% end %>
                                <% end %>

                                <div class="carousel-item">
                                    <div class="card">
                                        <div class="card-header">
                                            ID# @complaint.id
                                        </div>
                                        <img class="card-img-top" src="Gambar3.jpg" alt="Card image cap"/>
                                        <div class="card-body">
                                            <h5 class="card-title">Card Example</h5>
                                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                            <a href="#" class="btn btn-primary carousel-approve">Approve</a>
                                            <a href="#" class="btn btn-primary carousel-reject">Reject</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
