<body class= "log-in">
<div class="container sign-up-box">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group row">
        <div class="form-group col-md-8">
            <%= f.label :full_name %><br />
            <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name", class: 'form-control' %>
        </div>
        <div class="form-group col-md-4">
            <%= f.label :gender %><br />
            <%= f.text_field :gender, class: 'form-control' %>
        </div>
    </div>

      <div class="form-group row">
        <div class="form-group col-md-4">
            <%= f.label :ic_number %><br />
            <%= f.text_field :ic_number, autofocus: true, autocomplete: "ic_number", class: 'form-control' %>
        </div>
        <div class="form-group col-md-4">
            <%= f.label :driving_license %><br />
            <%= f.text_field :driving_license, autofocus: true, autocomplete: "driving_license", class: 'form-control' %>
        </div>
        <div class="form-group col-md-4">
            <%= f.label :number_plate %><br />
            <%= f.text_field :number_plate, autofocus: true, autocomplete: "number_plate", class: 'form-control' %>
        </div>
    </div>

    <div class="form-group row">
      <div class="form-group col-md-6">
          <%= f.label :email %><br />
          <%= f.text_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="form-group col-md-6">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="form-group col-md-6">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

</div>

</body>